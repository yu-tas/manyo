<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @task, local: true) do |form| %>
 
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>
   <%= form.hidden_field :deadline %>

  <p>名前:<%= @task.title %></p>
  <p>本文:<%= @task.content %></p>
  <p>終了期限<%= @task.deadline %></p>
  <p>ステータス<%= @task.status %></p>
  <%= form.submit  "登録する" %>

  <%= form.submit "戻る",name: 'back' %>
<% end %>