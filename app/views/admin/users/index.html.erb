<table>
  <tr>
    <th>ユーザー名</th>
    <th>タスク数</th>
    <th>Role</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.tasks.count %></td>
      <td><%= user.role.humanize %></td>

      <td>
        <%= link_to '詳細', admin_user_path(user) %>
        <%= link_to '編集', edit_admin_user_path(user) %>
        <%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に削除していいですか？' } %>
      </td>
    </tr>
  <% end %>
  <p><%= link_to '新規作成', new_admin_user_path %></p>
</table>

